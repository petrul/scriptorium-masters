   <text:h text:style-name="Heading_20_1" text:outline-level="1">Junge Triebe</text:h>
   <text:p text:style-name="P4">Roman</text:p>
   <text:p text:style-name="P8">von</text:p>
   <text:p text:style-name="P8">Ernst W. Freiler</text:p>
