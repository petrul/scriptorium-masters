   <text:p text:style-name="Title">JÃ¼dische Geschichten</text:p>
   <text:p text:style-name="P3">Peretz<text:span text:style-name="T3">, </text:span>Isaac Loeb </text:p>
   <text:p text:style-name="Date">2022-08-16T16:39:18.597289+00:002011-06-21</text:p>
   <text:p text:style-name="Text_20_body"/>
