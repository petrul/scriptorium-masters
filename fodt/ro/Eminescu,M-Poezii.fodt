   <text:p text:style-name="lg"><text:span text:style-name="T4">Ochiul tu iubit,</text:span><text:line-break/><text:span text:style-name="T4">Plin de mngieri,</text:span><text:line-break/><text:span text:style-name="T4">Dulce mi-au lucit</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Pn ieri.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">L-am iubit cu mii</text:span><text:line-break/><text:span text:style-name="T4">Lacrime fierbini</text:span><text:line-break/><text:span text:style-name="T4">i cu-att de vii</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Rugmini.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">i cum suferii</text:span><text:line-break/><text:span text:style-name="T4">De al tu amor,</text:span><text:line-break/><text:span text:style-name="T4">Ct de mult dorii</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Ca s mor!</text:span></text:p>
   <text:p text:style-name="lg"><text:soft-page-break/><text:span text:style-name="T4">Pururi te ctam</text:span><text:line-break/><text:span text:style-name="T4">Pe orice pmnt,</text:span><text:line-break/><text:span text:style-name="T4">Cci a-i spune am</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Un cuvnt.</text:span></text:p>
