   <text:p text:style-name="lg"><text:span text:style-name="T4">Luna n zdar</text:span><text:line-break/><text:span text:style-name="T4">Bate n fereti,</text:span><text:line-break/><text:span text:style-name="T4">i m-ntreab iar</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Unde eti?</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">Ar luci pe zid</text:span><text:line-break/><text:span text:style-name="T4">Pn ce te culci,</text:span><text:line-break/><text:span text:style-name="T4">Pn i se-nchid</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Ochii dulci.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">i ar tremura</text:span><text:line-break/><text:span text:style-name="T4">Tainic n frunzi</text:span><text:line-break/><text:span text:style-name="T4">i te-ar sruta</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Pe furi.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">Dar ea zi cu zi</text:span><text:line-break/><text:span text:style-name="T4">E n orice loc</text:span><text:line-break/><text:soft-page-break/><text:span text:style-name="T4">i te va gsi</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Cu noroc.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">Eu nu pot s plec</text:span><text:line-break/><text:span text:style-name="T4">Peste nori i vnt,</text:span><text:line-break/><text:span text:style-name="T4">i s te petrec</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">De-unde sunt.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">Cum nu sunt ca ea,</text:span><text:line-break/><text:span text:style-name="T4">Ca s m strecor,</text:span><text:line-break/><text:span text:style-name="T4">Drept oglinda ta</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">S cobor!</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">Chipul tu frumos</text:span><text:line-break/><text:span text:style-name="T4">S-l privesc ntreg,</text:span><text:line-break/><text:span text:style-name="T4">Cu att folos</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">S m-aleg.</text:span></text:p>
   <text:p text:style-name="lg"><text:span text:style-name="T4">S apar ca-n vis</text:span><text:line-break/><text:span text:style-name="T4">Acelei vederi</text:span><text:line-break/><text:span text:style-name="T4">Care mi-au surs</text:span><text:line-break/><text:span text:style-name="T10"> </text:span><text:span text:style-name="T4">Pn ieri.</text:span></text:p>
