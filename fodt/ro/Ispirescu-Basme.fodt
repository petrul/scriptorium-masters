   <text:p text:style-name="P19"/>
   <text:p text:style-name="P18">VIII. Musca mare treier</text:p>
   <text:p text:style-name="P18">Cea mai mic vntur</text:p>
   <text:p text:style-name="P18">Dou mere,</text:p>
   <text:p text:style-name="P18">Dou pere,</text:p>
   <text:p text:style-name="P18">Dou fuse d-aurele</text:p>
