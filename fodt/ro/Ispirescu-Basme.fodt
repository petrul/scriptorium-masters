   <text:p text:style-name="P18">Bf.</text:p>
   <text:p text:style-name="P19"/>
   <text:p text:style-name="P18">II. Iei feti</text:p>
   <text:p text:style-name="P18">Dn porti,</text:p>
   <text:p text:style-name="P18">C te-atapt Tlin,</text:p>
   <text:p text:style-name="P18">Tlin fecir de dmn,</text:p>
