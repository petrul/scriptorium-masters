   <text:p text:style-name="Author">Radu Theodoru</text:p>
   <text:h text:style-name="Heading_20_1" text:outline-level="1">Aproape de zei</text:h>
   <text:p text:style-name="Text_20_body"/>
   <text:h text:style-name="Heading_20_2" text:outline-level="2"><text:span text:style-name="T4">C</text:span>UPRINS<text:span text:style-name="T5"> /x/</text:span></text:h>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T4">C</text:span>ARTEA ÎNTÂI 4</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T4">I</text:span>NTERCEPTAREA 4</text:p>
