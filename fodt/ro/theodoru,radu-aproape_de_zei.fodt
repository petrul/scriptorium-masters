   <text:p text:style-name="Text_20_body"><text:span text:style-name="T4">C</text:span>ARTEA A DOUA 230</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T4">M</text:span>ISIUNE DE SACRIFICIU 230</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T4">A</text:span>LBATROSUL 231</text:p>
