      <text:p text:style-name="P31">stăpân,</text:p>
      <text:p text:style-name="P31">viezure,</text:p>
      <text:p text:style-name="P31">gata,</text:p>
      <text:p text:style-name="P31">sat,</text:p>
      <text:p text:style-name="P31">vatră,</text:p>
      <text:p text:style-name="P31">moș,</text:p>
      <text:p text:style-name="P31">mire,</text:p>
