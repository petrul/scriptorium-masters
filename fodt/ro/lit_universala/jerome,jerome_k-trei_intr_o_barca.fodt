   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">{</text:span>4} 1 inch = 25,4 cm</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">{</text:span>5} 1 yard = 0,914399 m</text:p>
