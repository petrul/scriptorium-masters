   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body">Î</text:p>
   <text:p text:style-name="Text_20_body"><text:soft-page-break/></text:p>
   <text:p text:style-name="Text_20_body">Îmbucura (a se): a se înveseli, a se bucura</text:p>
