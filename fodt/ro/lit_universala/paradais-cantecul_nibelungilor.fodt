   <text:p text:style-name="Text_20_body">30</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="P2">via i pe moarte. Paloele se ncruciau scprnd scntei, cetatea se</text:p>
