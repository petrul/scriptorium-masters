   <text:p text:style-name="Text_20_body">puzderie: mulțime, în număr foarte mare</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body">R</text:p>
   <text:p text:style-name="Text_20_body"/>
