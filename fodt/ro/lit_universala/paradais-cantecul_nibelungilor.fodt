   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="P2">A PATRUSPREZECEA NTMPLARE</text:p>
   <text:p text:style-name="Text_20_body">Cum a fost jelit i nmormntat Siegfried</text:p>
