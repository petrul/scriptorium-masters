   <text:h text:style-name="Heading_20_1" text:outline-level="1">Visul unei nopi de var</text:h>
   <text:p text:style-name="P3">de William Shakespeare</text:p>
   <text:p text:style-name="P3">traducere de tefan Octavian Iosif</text:p>
   <text:h text:style-name="Heading_20_2" text:outline-level="2"><text:bookmark text:name="Personajele_dramei"/>Personajele dramei</text:h>
   <text:p text:style-name="P12">THEZEU <text:line-break/>Ducele Atenei</text:p>
   <text:p text:style-name="P12">EGEU <text:line-break/>tatl Hermiei</text:p>
   <text:p text:style-name="P12">LYSANDER</text:p>
   <text:p text:style-name="P12">DEMETRIUS </text:p>
   <text:p text:style-name="P12">ndrgostii de Hermia</text:p>
   <text:p text:style-name="P12">PHILOSTRAT <text:line-break/>maestru de ceremonii la curtea lui Thezeu</text:p>
   <text:p text:style-name="P12">QUINCE <text:line-break/>dulgher</text:p>
   <text:p text:style-name="P12">SNUG <text:line-break/>tmplar</text:p>
   <text:p text:style-name="P12">BOTTOM <text:line-break/>estor</text:p>
   <text:p text:style-name="P12">FLUTE <text:line-break/>crpaci de foale</text:p>
   <text:p text:style-name="P12">SNOUT <text:line-break/>cldrar</text:p>
   <text:p text:style-name="P12">STARVELING <text:line-break/>croitor</text:p>
   <text:p text:style-name="P12">HIPPOLYTA <text:line-break/>criasa amazoanelor</text:p>
   <text:p text:style-name="P12">HERMIA <text:line-break/>fiica lui Egeu, ndrgostit de Lysander</text:p>
   <text:p text:style-name="P12">HELENA <text:line-break/>ndrgostit de Demetrius</text:p>
   <text:p text:style-name="P12">OBERON <text:line-break/>craiul znelor</text:p>
   <text:p text:style-name="P12">TITANIA <text:line-break/>criasa znelor</text:p>
   <text:p text:style-name="P12">PUCK <text:line-break/>spiridu</text:p>
   <text:p text:style-name="P12"><text:soft-page-break/>FLOARE-DE-MZRICHE</text:p>
   <text:p text:style-name="P12">TORT-DE-PIANJEN</text:p>
   <text:p text:style-name="P12">MOLIE</text:p>
   <text:p text:style-name="P12">BOB-DE-MUTAR <text:line-break/>spiridui i zne</text:p>
