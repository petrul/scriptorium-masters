   <text:p text:style-name="P37"><text:span text:style-name="T4">La mijloc i prinde</text:span><text:line-break/><text:span text:style-name="T4">i-n juru-le-ntinde</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">O hor pgn.</text:span><text:line-break/><text:span text:style-name="T4">Lung clocote dealul:</text:span><text:line-break/><text:span text:style-name="T4">Voinicul i calul</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Se zbat n rn!</text:span></text:p>
   <text:p text:style-name="P37"><text:span text:style-name="T4">Iar ielele, fetele,</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Nou surori,</text:span><text:line-break/><text:span text:style-name="T4">i spulber pletele</text:span><text:line-break/><text:span text:style-name="T4">Pn la nori,</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">i uier,</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Fluier,</text:span><text:line-break/><text:span text:style-name="T4">Chiot-n lun;</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">i-n lanuri</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">De danuri</text:span><text:line-break/><text:span text:style-name="T4">Se-ntind i s-adun...</text:span><text:line-break/><text:span text:style-name="T4">Slbatece cnt</text:span><text:line-break/><text:span text:style-name="T4">i iari s-avnt</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">n goana nebun!</text:span></text:p>
