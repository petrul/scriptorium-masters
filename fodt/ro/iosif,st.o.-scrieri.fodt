    <text:list-item>
     <text:p text:style-name="P54"><text:bookmark text:name="cite_note-16"/><text:a xlink:type="simple" xlink:href="https://ro.wikisource.org/wiki/Romeo_și_Julieta#cite_ref-16" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="T15">↑</text:span></text:a><text:span text:style-name="T10"> </text:span><text:span text:style-name="T6">Putană :</text:span><text:span text:style-name="T4"> (aici) copiliță, puicuță, muierușcă; (vulg.) putoare, târfă.</text:span></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P54"><text:bookmark text:name="cite_note-17"/><text:a xlink:type="simple" xlink:href="https://ro.wikisource.org/wiki/Romeo_și_Julieta#cite_ref-17" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="T15">↑</text:span></text:a><text:span text:style-name="T10"> </text:span><text:span text:style-name="T6">Alla Stoccata: </text:span><text:span text:style-name="T4">lovitură cu vârful spadei (it.: termen folosit în scrimă).</text:span></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P54"><text:bookmark text:name="cite_note-18"/><text:a xlink:type="simple" xlink:href="https://ro.wikisource.org/wiki/Romeo_și_Julieta#cite_ref-18" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="T15">↑</text:span></text:a><text:span text:style-name="T10"> </text:span><text:span text:style-name="T6">Orbiș: </text:span><text:span text:style-name="T4">orbește, nechibzuit; (aici) cu furie, nebunește.</text:span></text:p>
