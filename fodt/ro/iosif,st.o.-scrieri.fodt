   <text:p text:style-name="P37"><text:span text:style-name="T4">Pe molcome vnturi</text:span><text:line-break/><text:span text:style-name="T4">Vin tainice cnturi</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">i glasuri ciudate...</text:span><text:line-break/><text:span text:style-name="T4">Cci duhul pierzrii</text:span><text:line-break/><text:span text:style-name="T4">La marginea zrii</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Din aripe bate!</text:span></text:p>
   <text:p text:style-name="P37"><text:span text:style-name="T4">ndeamn-i fugarul</text:span><text:line-break/><text:span text:style-name="T4">S taie hotarul</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Ca gndul de iute!</text:span><text:line-break/><text:span text:style-name="T4">N-auzi tu pe cale</text:span><text:line-break/><text:span text:style-name="T4">Cimpoaie, imbale</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">i glas de-alute?</text:span></text:p>
   <text:p text:style-name="P37"><text:soft-page-break/><text:span text:style-name="T4">Sunt iele miastre</text:span><text:line-break/><text:span text:style-name="T4">Pe urmele voastre,</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Pe voi v vneaz!</text:span><text:line-break/><text:span text:style-name="T4">Preasfnta Marie</text:span><text:line-break/><text:span text:style-name="T4">Din nalta trie</text:span><text:line-break/><text:span text:style-name="T10"></text:span><text:span text:style-name="T4">Ne aib n paz!</text:span></text:p>
