   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">H</text:span><text:span text:style-name="T2">otărăşte-mă, pune-mi hotare 171</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T10">I</text:span>ndividul care nu e ins 174</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">D</text:span><text:span text:style-name="T2">espre partea femeiască sau dincoace şi dincolo de ins.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">G</text:span><text:span text:style-name="T2">ânduri despre sat şi fsat 181</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">Î</text:span><text:span text:style-name="T2">n cătune şi colibe 184</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">C</text:span><text:span text:style-name="T2">omunicare şi cuminecare 188</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T10">C</text:span>uvânt următor 192</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">C</text:span><text:span text:style-name="T2">REAŢIE ŞI FRUMOS.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">Î</text:span><text:span text:style-name="T2">n loc de prefaţă 199 N.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T10">D</text:span>espre a doua comoară a limbilor 201</text:p>
