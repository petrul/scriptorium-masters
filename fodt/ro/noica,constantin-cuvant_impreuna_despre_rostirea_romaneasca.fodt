   <text:p text:style-name="Author">Constantin Noica</text:p>
   <text:h text:style-name="Heading_20_1" text:outline-level="1">Cuvânt împreună despre rostirea românească</text:h>
   <text:h text:style-name="Heading_20_2" text:outline-level="2"><text:span text:style-name="T10">C</text:span>UPRINS:<text:span text:style-name="T8"> /x/</text:span></text:h>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">R</text:span><text:span text:style-name="T2">OSTIREA FILOSOFICA ROMÂNEASCĂ.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T10">C</text:span>uvânt înainte 7</text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">I</text:span><text:span text:style-name="T2"> Şinele şi Sinea.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">I</text:span><text:span text:style-name="T2">I Ciclul fiinţei.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">R</text:span><text:span text:style-name="T2">ost şi rostire 20 Intru 27 Fire 34 Fiinţă 41</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">I</text:span><text:span text:style-name="T2">II Ciclul devenirii.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">T</text:span><text:span text:style-name="T2">recere, petrecere 49</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">V</text:span><text:span text:style-name="T2">remea vremuieşte 54</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T5">I</text:span><text:span text:style-name="T2">nfinit şi infinire la Eminescu 60 îndoita infinire la Brâncuşi 66</text:span></text:p>
