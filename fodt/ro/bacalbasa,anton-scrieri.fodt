   <text:p text:style-name="P58"><text:soft-page-break/>Porumbielu fiert</text:p>
   <text:p text:style-name="P58">Un Gzar</text:p>
   <text:p text:style-name="P58">Un spunar</text:p>
   <text:p text:style-name="P58">Un precupe</text:p>
   <text:p text:style-name="P58">Alt precupe</text:p>
   <text:p text:style-name="P58">Un oetar</text:p>
   <text:p text:style-name="P58">Un zarzavagiu</text:p>
   <text:p text:style-name="P58">Un bragagiu</text:p>
   <text:p text:style-name="P58">Unul chifle</text:p>
   <text:p text:style-name="P58">Un telal</text:p>
   <text:p text:style-name="P58">Un vnztor de ziare</text:p>
   <text:p text:style-name="P58">Bursuc, senator</text:p>
   <text:p text:style-name="P58">Ibricescu, dentist</text:p>
   <text:p text:style-name="P45"><text:span text:style-name="T1">Forfecaru</text:span>,<text:span text:style-name="T1">reporter</text:span></text:p>
