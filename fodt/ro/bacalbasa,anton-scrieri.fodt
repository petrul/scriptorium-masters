   <text:p text:style-name="P45">&apos;&apos;<text:span text:style-name="T1">Un june Gigerl</text:span></text:p>
   <text:p text:style-name="P58">Agiu artist dramatic</text:p>
   <text:p text:style-name="P58">Rafael</text:p>
