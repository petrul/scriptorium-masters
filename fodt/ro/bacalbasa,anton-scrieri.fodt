   <text:p text:style-name="P58">D-rul Pescatore</text:p>
   <text:p text:style-name="P58">Hidrologescu</text:p>
   <text:p text:style-name="P58">Un Comisionar</text:p>
   <text:p text:style-name="P58">Un spectator</text:p>
   <text:p text:style-name="P58">1-a falit</text:p>
   <text:p text:style-name="P58">2-lea falit</text:p>
   <text:p text:style-name="P58">3-lea falit</text:p>
   <text:p text:style-name="P58">4-lea falit</text:p>
   <text:p text:style-name="P58">5-lea falit</text:p>
   <text:p text:style-name="P58">Repaosul Duminical</text:p>
