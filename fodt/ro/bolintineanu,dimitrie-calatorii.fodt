   <text:h text:style-name="Heading_20_2" text:outline-level="2">GRANDEA<text:span text:style-name="T28"> </text:span>MACEDONEANUL</text:h>
   <text:p text:style-name="P25"/>
   <text:p text:style-name="P25"> Pastorele, de voieti, Spune-mi mie cine eti ?</text:p>
   <text:p text:style-name="P25"/>
