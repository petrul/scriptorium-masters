   <text:p text:style-name="Text_20_body">﻿</text:p>
   <text:h text:style-name="Heading_20_4" text:outline-level="4">136</text:h>
   <text:p text:style-name="First_20_paragraph"><text:span text:style-name="T1">Н. Г. Чернышевский.</text:span> Полн. собр. соч., т. III, с. 431.</text:p>
   <text:p text:style-name="Text_20_body"><text:a xlink:type="simple" xlink:href="#section132.xhtml#n_136_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_136</text:span></text:a></text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body">﻿</text:p>
   <text:h text:style-name="Heading_20_4" text:outline-level="4">137</text:h>
   <text:p text:style-name="First_20_paragraph">Слабо <text:span text:style-name="T1">(нем.).</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:a xlink:type="simple" xlink:href="#section132.xhtml#n_137_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_137</text:span></text:a></text:p>
