   <text:h text:style-name="Heading_20_4" text:outline-level="4">1</text:h>
   <text:p text:style-name="First_20_paragraph">московской Венерой <text:span text:style-name="T1">(франц.).</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:a xlink:type="simple" xlink:href="#section5.xhtml#n_1_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_1</text:span></text:a></text:p>
