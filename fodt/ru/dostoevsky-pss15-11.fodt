   <text:p text:style-name="Text_20_body"><text:soft-page-break/><text:a xlink:type="simple" xlink:href="#section25.xhtml#n_47_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_47</text:span></text:a></text:p>
