   <text:p text:style-name="Text_20_body">﻿</text:p>
   <text:h text:style-name="Heading_20_4" text:outline-level="4">48</text:h>
   <text:p text:style-name="First_20_paragraph">Вы понимаете? <text:span text:style-name="T1">(франц.).</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:a xlink:type="simple" xlink:href="#section28.xhtml#n_48_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_48</text:span></text:a></text:p>
