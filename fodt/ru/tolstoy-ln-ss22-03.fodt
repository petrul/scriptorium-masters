   <text:p text:style-name="Text_20_body"><text:a xlink:type="simple" xlink:href="#section93.xhtml#n_81_back" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">n_81</text:span></text:a></text:p>
