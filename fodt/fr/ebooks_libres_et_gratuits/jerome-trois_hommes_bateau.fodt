   <text:p text:style-name="Standard"/>
   <text:p text:style-name="Standard"><text:span text:style-name="T13">Ce</text:span> <text:span text:style-name="T13">fut MmeÂ Poppets qui nous rÃ©veilla le lendemain matin.</text:span></text:p>
   <text:p text:style-name="Standard"/>
