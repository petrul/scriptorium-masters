   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Mayotte</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Saint-Pierre-et-Miquelon</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Aruba</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Antilles néerlandaises:</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Bonaire</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Curaçao</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Saba</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Sint Eustatius</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Sint Maarten</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Anguilla</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les îles Caymans</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les îles Falkland</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Géorgie du Sud et les îles Sandwich du Sud</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Montserrat</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Pitcairn</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">Sainte-Hélène et ses dépendances</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">le territoire de l&apos;Antarctique britannique</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les territoires britanniques de l&apos;océan Indien</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les îles Turks et Caicos</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les îles Vierges britanniques</text:span></text:p>
