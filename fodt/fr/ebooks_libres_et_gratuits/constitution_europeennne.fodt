   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">la Polynésie française</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T42">—</text:span><text:span text:style-name="T43"> </text:span><text:span text:style-name="T36">les Terres australes et antarctiques françaises</text:span></text:p>
