   <text:p text:style-name="Text_20_body"><text:soft-page-break/>â<text:span text:style-name="T1"> </text:span>Et il a des basÂ !</text:p>
   <text:p text:style-name="Text_20_body">â<text:span text:style-name="T1"> </text:span>Câest Ã©trange.</text:p>
