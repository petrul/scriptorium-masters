   <text:p text:style-name="Text_20_body">â<text:span text:style-name="T1"> </text:span>Ni MÃ©nicent.</text:p>
   <text:p text:style-name="Text_20_body">â<text:span text:style-name="T1"> </text:span>Ni GuÃ©harrÃ©e.</text:p>
