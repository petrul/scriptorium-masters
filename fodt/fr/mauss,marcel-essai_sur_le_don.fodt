   <text:p text:style-name="Subtitle">ESSAI<text:span text:style-name="T15"> <text:line-break/></text:span>SUR LE DON <text:span text:style-name="Footnote_20_Symbol"><text:note text:id="ftn1" text:note-class="footnote"><text:note-citation>1</text:note-citation><text:note-body>
       <text:p text:style-name="Footnote"><text:s/><text:tab/>Extrait de <text:span text:style-name="T13">l&apos;Année Sociologique, </text:span>seconde série, 1923-1924, tome I.</text:p></text:note-body></text:note></text:span></text:p>
   <text:p text:style-name="Subtitle"/>
   <text:p text:style-name="Subtitle">FORME ET RAISON DE L&apos;ÉCHANGE<text:span text:style-name="T14"> <text:line-break/></text:span>DANS LES SOCIÉTÉS ARCHAÏQUES</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
