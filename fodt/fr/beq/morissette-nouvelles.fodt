   <text:h text:style-name="Heading_20_2" text:outline-level="2">Cet ouvrage est le 73e publi</text:h>
   <text:p text:style-name="Text_20_body">dans la collection Littrature qubcoise</text:p>
   <text:p text:style-name="Text_20_body">par la Bibliothque lectronique du Qubec.</text:p>
   <text:p text:style-name="Text_20_body"></text:p>
   <text:p text:style-name="Text_20_body"></text:p>
   <text:p text:style-name="Text_20_body">La Bibliothque lectronique du Qubec</text:p>
   <text:p text:style-name="Text_20_body">est la proprit exclusive de</text:p>
   <text:p text:style-name="Text_20_body">Jean-Yves Dupuis.</text:p>
   <text:p text:style-name="Text_20_body"/>
