   <text:h text:style-name="P16" text:outline-level="4">XLI</text:h>
   <text:p text:style-name="lg"><text:span text:style-name="T1">Dieu qui sourit et qui donne</text:span><text:line-break/><text:span text:style-name="T1">Et qui vient vers qui lattend,</text:span><text:line-break/><text:span text:style-name="T1">Pourvu que vous soyez bonne,</text:span><text:line-break/><text:span text:style-name="T1">Sera content.</text:span><text:line-break/><text:line-break/><text:span text:style-name="T1">Le monde o tout tincelle,</text:span><text:line-break/><text:span text:style-name="T1">Mais o rien nest enflamm,</text:span><text:line-break/><text:span text:style-name="T1">Pourvu que vous soyez belle,</text:span><text:line-break/><text:span text:style-name="T1">Sera charm.</text:span><text:line-break/><text:line-break/><text:span text:style-name="T1">Mon cur, dans lombre amoureuse</text:span><text:line-break/><text:span text:style-name="T1">O lenivre deux beaux yeux,</text:span><text:line-break/><text:span text:style-name="T1">Pourvu que tu sois heureuse,</text:span><text:line-break/><text:span text:style-name="T1">Sera joyeux.</text:span></text:p>
   <text:p text:style-name="Text_20_body"><text:span text:style-name="T1">1</text:span><text:span text:style-name="T9">er</text:span><text:span text:style-name="T1"> janvier 1840.</text:span></text:p>
   <text:p text:style-name="Text_20_body"/>
