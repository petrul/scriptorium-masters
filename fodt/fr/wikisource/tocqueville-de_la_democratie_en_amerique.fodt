   <text:p text:style-name="First_20_paragraph"><text:line-break/></text:p>
   <text:p text:style-name="First_20_paragraph"><text:a xlink:type="simple" xlink:href="https://fr.wikisource.org/wiki/De_la_démocratie_en_Amérique/Édition_1866/Vol_2/Chapitre_03#lien_p026" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition"><text:span text:style-name="T24">Note</text:span></text:span></text:a></text:p>
   <text:p text:style-name="Text_20_body"><text:line-break/></text:p>
