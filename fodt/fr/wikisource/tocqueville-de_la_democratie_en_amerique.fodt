   <text:h text:style-name="Heading_20_2" text:outline-level="2"><text:span text:style-name="Label">Deuxième partie</text:span><text:line-break/><text:span text:style-name="T30"> </text:span><text:span text:style-name="T3">Influence de la démocratie sur les sentiments des américains.</text:span></text:h>
   <text:p text:style-name="Text_20_body"><text:line-break/></text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
