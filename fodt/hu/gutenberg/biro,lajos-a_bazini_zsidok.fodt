   <text:p text:style-name="Title">A bazini zsidók: Regény</text:p>
   <text:p text:style-name="Author">Lajos Biró</text:p>
   <text:p text:style-name="Date">2022-09-28T21:12:47.537678+00:002020-10-31</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
