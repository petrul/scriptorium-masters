   <text:p text:style-name="P5">HATODIK RÉSZ.</text:p>
   <text:list xml:id="list2337560982" text:style-name="L8">
    <text:list-item>
     <text:p text:style-name="P19">A vadonban <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-4.htm.html#Page_167" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">167</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P19">Az Isten szolgája és az istentagadó <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-5.htm.html#Page_186" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">186</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P19">A harmadik nyom <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-5.htm.html#Page_198" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">198</text:span></text:a></text:p>
