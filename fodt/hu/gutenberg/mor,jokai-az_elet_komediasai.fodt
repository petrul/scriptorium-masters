   <text:p text:style-name="P5">ÖTÖDIK RÉSZ: LIVIA.</text:p>
   <text:list xml:id="list547578650" text:style-name="L7">
    <text:list-item>
     <text:p text:style-name="P18">A Loreley <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-2.htm.html#Page_86" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">86</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">Ragyogó veszély <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-2.htm.html#Page_102" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">102</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">Az oroszlán, a kit megütnek <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-3.htm.html#Page_117" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">117</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">Most jövök én <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-3.htm.html#Page_123" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">123</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">Táncz a vulkán felett <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-3.htm.html#Page_132" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">132</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">A «schwarze Péter» <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-4.htm.html#Page_146" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">146</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P18">A tűzakna fellobban <text:a xlink:type="simple" xlink:href="#6979384874742987347_56789-h-4.htm.html#Page_162" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">162</text:span></text:a></text:p>
    </text:list-item>
