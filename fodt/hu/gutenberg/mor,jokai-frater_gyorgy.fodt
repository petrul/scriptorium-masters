   <text:h text:style-name="Heading_20_3" text:outline-level="3">TARTALOM.<text:span text:style-name="T3"> /x/</text:span></text:h>
   <text:p text:style-name="First_20_paragraph">ELSŐ KÖTET.</text:p>
   <text:list xml:id="list2643899833" text:style-name="L1">
    <text:list-item>
     <text:p text:style-name="P25">I. Fényes Buda vára! <text:a xlink:type="simple" xlink:href="#3418400412694977291_64750-h-2.htm.html#Page_1" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">1</text:span></text:a></text:p>
    </text:list-item>
