   <text:p text:style-name="Title">A hazai bölcsészet jelene</text:p>
   <text:p text:style-name="Author">János Erdélyi</text:p>
   <text:p text:style-name="Date">2022-09-29T11:18:48.221409+00:002021-03-10</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Horizontal_20_Line"/>
