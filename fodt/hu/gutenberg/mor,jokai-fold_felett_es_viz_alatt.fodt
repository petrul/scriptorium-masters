    <text:list-item>
     <text:p text:style-name="P5">FÖLD FELETT ÉS VIZ ALATT:</text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Párbaj Istennel <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-0.htm.html#Page_1" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">1</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">A magyar Faust <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-1.htm.html#Page_44" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">44</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Két léghajós <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-2.htm.html#Page_67" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">67</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">A csigák regénye <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-2.htm.html#Page_94" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">94</text:span></text:a></text:p>
