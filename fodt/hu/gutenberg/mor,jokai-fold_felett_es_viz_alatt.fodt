   <text:list xml:id="list321555728" text:style-name="L3">
    <text:list-item>
     <text:p text:style-name="P7">A SZEGÉNYSÉG ÚTJA:</text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">A kis-király <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-6.htm.html#Page_201" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">201</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">A fehér toll és vörös toll <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-6.htm.html#Page_205" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">205</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Az alkotmányos harcz <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-6.htm.html#Page_219" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">219</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Hogy lett Kádár Lászlóból Villám Bandi <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-6.htm.html#Page_228" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">228</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Nemes boszú <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-6.htm.html#Page_232" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">232</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Egy ebéd – otthon <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-7.htm.html#Page_240" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">240</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Paraszt boszú <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-7.htm.html#Page_248" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">248</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">Az asszony <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-7.htm.html#Page_256" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">256</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">A férfi <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-7.htm.html#Page_261" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">261</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">A nem várt vendég <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-7.htm.html#Page_267" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">267</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P7">A végnek a kezdete <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-8.htm.html#Page_284" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">284</text:span></text:a></text:p>
    </text:list-item>
