   <text:list xml:id="list3964729683" text:style-name="L2">
    <text:list-item>
     <text:p text:style-name="P6">A VÉRES KENYÉR <text:a xlink:type="simple" xlink:href="#88886481145228953_56874-h-4.htm.html#Page_149" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">149</text:span></text:a></text:p>
