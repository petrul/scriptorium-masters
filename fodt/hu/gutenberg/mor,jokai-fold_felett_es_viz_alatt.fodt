   <text:p text:style-name="Horizontal_20_Line"/>
   <text:h text:style-name="Heading_20_1" text:outline-level="1">Föld Felett És Viz Alatt</text:h>
   <text:p text:style-name="P3">REGÉNYKÉK</text:p>
