     <text:p text:style-name="P5"/>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Immaculata <text:a xlink:type="simple" xlink:href="#9086075212622913003_55647-h-11.htm.html#Page_394" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">394</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Férj és férfi <text:a xlink:type="simple" xlink:href="#9086075212622913003_55647-h-11.htm.html#Page_402" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">402</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Dirmák Éva <text:a xlink:type="simple" xlink:href="#9086075212622913003_55647-h-11.htm.html#Page_408" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">408</text:span></text:a></text:p>
    </text:list-item>
    <text:list-item>
     <text:p text:style-name="P5">Semmivé lenni <text:a xlink:type="simple" xlink:href="#9086075212622913003_55647-h-11.htm.html#Page_412" text:style-name="Internet_20_link" text:visited-style-name="Visited_20_Internet_20_Link"><text:span text:style-name="Definition">412</text:span></text:a></text:p>
    </text:list-item>
