   <text:h text:style-name="Heading_20_1" text:outline-level="1">Los cabellos de Absaln</text:h>
   <text:p text:style-name="P14">PERSONAS QUE HABLAN EN ELLA</text:p>
   <text:p text:style-name="P14">- EL REY DAVID.</text:p>
   <text:p text:style-name="P14">- JOAB.</text:p>
   <text:p text:style-name="P14">- ABSALN.</text:p>
   <text:p text:style-name="P14">- ADONAS.</text:p>
   <text:p text:style-name="P14">- AMN.</text:p>
   <text:p text:style-name="P14">- JONADAB.</text:p>
   <text:p text:style-name="P14">- TAMAR.</text:p>
   <text:p text:style-name="P14">- TEUIA (sic).</text:p>
   <text:p text:style-name="P14">- AQUITOFEL.</text:p>
   <text:p text:style-name="P14">- ELIAZAR (sic).</text:p>
   <text:p text:style-name="P14">- SEMEY.</text:p>
   <text:p text:style-name="P14">- ENSAY.</text:p>
   <text:p text:style-name="P14">- PASTORES.</text:p>
