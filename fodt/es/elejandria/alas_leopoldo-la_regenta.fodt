   <text:h text:style-name="Heading_20_1" text:outline-level="1">La Regenta</text:h>
   <text:p text:style-name="P4">por</text:p>
   <text:p text:style-name="P4">Leopoldo Alas Clarn</text:p>
   <text:p text:style-name="P4">Librera de Fernando F, Madrid</text:p>
