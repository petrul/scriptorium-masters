   <text:p text:style-name="Title">Cartas desde mi celda</text:p>
   <text:p text:style-name="P7">BÃ©cquer<text:span text:style-name="T5">, </text:span>Gustavo Adolfo </text:p>
   <text:p text:style-name="Date">2020-12-042020-12-04</text:p>
