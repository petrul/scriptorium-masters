   <text:p text:style-name="P17">Escritos<text:span text:style-name="T5"> 2</text:span></text:p>
   <text:p text:style-name="P3">Calderon de la Barca<text:span text:style-name="T1">,Pedro</text:span></text:p>
   <text:p text:style-name="Date">2020-07-14T22:00:00+00:00</text:p>
   <text:p text:style-name="Text_20_body"/>
