   <text:p text:style-name="P3">Baldomero Lillo</text:p>
   <text:h text:style-name="Heading_20_1" text:outline-level="1">Sub Sole</text:h>
   <text:p text:style-name="Date">2021-08-192021-08-19</text:p>
