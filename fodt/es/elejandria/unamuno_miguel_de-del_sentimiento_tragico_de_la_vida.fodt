   <text:p text:style-name="Title">DEL SENTIMIENTO TR√ÅGICO DE LA VIDA</text:p>
   <text:p text:style-name="P4">Unamuno<text:span text:style-name="T4">, </text:span>Miguel de </text:p>
   <text:p text:style-name="Date">2019-11-06</text:p>
   <text:p text:style-name="Text_20_body"/>
   <text:p text:style-name="Text_20_body"/>
