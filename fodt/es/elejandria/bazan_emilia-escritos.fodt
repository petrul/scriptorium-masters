   <text:p text:style-name="P9">Escritos</text:p>
   <text:p text:style-name="P10">Pardo Baz√°n<text:span text:style-name="T5">,Emilia</text:span></text:p>
   <text:p text:style-name="Date">20191223</text:p>
   <text:p text:style-name="Text_20_body"/>
