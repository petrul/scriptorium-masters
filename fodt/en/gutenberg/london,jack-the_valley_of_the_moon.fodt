   <text:p text:style-name="First_20_paragraph"><text:line-break/><text:line-break/></text:p>
   <text:h text:style-name="Heading_20_2" text:outline-level="2">Book I</text:h>
   <text:p text:style-name="First_20_paragraph"/>
