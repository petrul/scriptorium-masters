   <text:p text:style-name="Title">Island Tales / On the Makaloa Mat</text:p>
   <text:p text:style-name="Author">Jack London</text:p>
   <text:p text:style-name="Date">2000-04-01</text:p>
   <text:p text:style-name="Text_20_body"/>
