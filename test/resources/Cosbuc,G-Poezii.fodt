   <text:p text:style-name="P36">S rd de fat,</text:p>
   <text:p text:style-name="P36">Mcar c ea-i moart.</text:p>
   <text:p text:style-name="P36"/>
   <text:p text:style-name="P36">i-apoi veseloas</text:p>
   <text:p text:style-name="P36">Fira-ntoarn-acas</text:p>
   <text:p text:style-name="P36">i precum rdea</text:p>
   <text:p text:style-name="P36">Nencetat glumea</text:p>
   <text:p text:style-name="P36">i fetei zicea:</text:p>
   <text:p text:style-name="P36"><text:soft-page-break/>Draga mamei, fat,</text:p>
   <text:p text:style-name="P36">Nu fi suprat,</text:p>
