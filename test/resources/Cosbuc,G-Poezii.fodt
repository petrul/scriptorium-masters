   <text:p text:style-name="P36">Ionel zicea</text:p>
   <text:p text:style-name="P36">ns cum zicea</text:p>
   <text:p text:style-name="P36">El nglbenea</text:p>
   <text:p text:style-name="P36">i ru i prea,</text:p>
   <text:p text:style-name="P36"><text:soft-page-break/>C-a vorbit minciun,</text:p>
